@{
}

@model List<BookingViewModel>

<h2>Bookings</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Booked</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.VenueName</td>
                <td>@booking.VenueLocation</td>
                <td>@booking.VenueCapacity</td>
                <td>@booking.EventName</td>
                <td>@booking.EventDate.ToShortDateString()</td>
                <td>@(booking.Booked ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

