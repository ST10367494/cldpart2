@model EventVenueBooking1.Models.Entities.Event

<h1>Edit Event</h1>
@if (Model is null)
{
    <p>No Event Found With This Id</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="RowKey" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" asp-for="EventDate" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Booked" asp-for="Booked" />
            <label class="form-check-label" for="Booked">Booked</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Event">Delete</button>
        </div>

    </form>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
