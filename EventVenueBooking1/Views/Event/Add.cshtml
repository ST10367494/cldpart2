@model EventVenueBooking1.Models.ViewModels.AddEventViewModel


<h1>Add Event</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Event Date</label>
        <input type="datetime-local" class="form-control" asp-for="EventDate" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue</label>
        <select asp-for="VenueId" asp-items="Model.Venues" class="form-control">
            <option value="">-- Select a Venue --</option>
        </select>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Booked" />
        <label class="form-check-label" asp-for="Booked">Booked</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

